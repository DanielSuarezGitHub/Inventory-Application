extends layout

block content
  div.delete-container(style="display: flex; flex-direction: column; align-items: center;")
    header(style="font-size: 2rem; font-weight: bold; margin-bottom: 2rem;")
      h1 Are you sure you want to delete #{item.name}?

    form(method="POST", action='', style="display: flex; flex-direction: column; align-items: center;")
      button.delete-btn(type="submit", style="font-size: 1.5rem; padding: 1rem; background-color: red; color: white; border: none; border-radius: 5px; cursor: pointer;") Delete #{item.name}