extends layout

block content
  h1 Update Item
  if errors
    ul
      each error in errors
        li= error.msg
  form(method='POST' action='' style="background-color: #f2f2f2; padding: 20px; border-radius: 5px;padding: 10px; display: flex; flex-direction: column; gap: 15px; justify-content: center; width: 500px;")
    label(for="name") Item Name
    input(type="text" name="name" id="name" value=itemInfo.name style="padding: 8px; border-radius: 5px; border: none; margin-bottom: 10px;")
    label(for="price") Item Price
    input(type="number" name="price" id="price" value=itemInfo.price style="padding: 8px; border-radius: 5px; border: none; margin-bottom: 10px;")
    label(for="stock") Quantity
    input(type="number" name="stock" id="stock" value=itemInfo.stock style="padding: 8px; border-radius: 5px; border: none; margin-bottom: 10px;")
    label(for="category") Category
    select(name="category" style="padding: 8px; border-radius: 5px; border: none; margin-bottom: 10px;")
      each category in categories
        if category._id.toString() === itemInfo.category._id.toString()
          option(value=category._id selected)= category.name
        else
          option(value=category._id)= category.name
    button(type="submit" style="background-color: #4CAF50; color: white; padding: 10px 15px; border: none; border-radius: 5px; cursor: pointer; font-size: 16px; margin-top: 20px; width: max-content margin: 0 auto;") Update Item
